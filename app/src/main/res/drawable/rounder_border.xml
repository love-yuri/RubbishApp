<!-- res/drawable/rounded_border.xml -->
<shape xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="ExtraText">
    <solid android:color="#666666" /> <!-- 背景颜色 -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- 边框颜色 -->
    <corners android:radius="15dp" /> <!-- 圆角半径 -->
    <padding
        android:left="15dp"
        android:top="15dp"
        android:right="15dp"
        android:bottom="15dp" /> <!-- 内边距 -->
</shape>
